.list-group-item {
	margin-top: 5px;
}

.item-detail {
	padding: 10px;
}

.flex {
	display: -webkit-flex;
	display: -moz-box;
	display: -o-box;
	display: -ms-flexbox;
	display: flex;
	justify-content: space-between;
}

.flex-body {

}

.distance {
	padding: 0 20px;
	position: relative;
	border-bottom: 1px #333 solid;
}

.distance:before {
	content: "";
	position: absolute;
	bottom: -3px;
	left: -5px;
	width: 4px;
	height: 4px;
	border: 1px #333 solid;
	border-radius: 50%;
}

.distance:after {
	content: "";
	position: absolute;
	bottom: -3px;
	right: -5px;
	width: 4px;
	height: 4px;
	border: 1px #333 solid;
	border-radius: 50%;
}

.more-day {
	position: relative;
	bottom: 10px;
}

.flex .flightsport {
	margin: 5px 0 3px;
}

.left-ticket-detail {
	width: 80%;
}

.right-price {
	width: 20%;
}

.flight-list-detail {
	padding: 0 5px;
}

.flight-list-item {
	margin-top: 5px;
	border-radius: 6px;
	padding: 10px 15px;
}

.media-body, .media-right {
	display: table-cell;
	vertical-align: middle;
}

.media-body {
	width: 100%;
	padding-right: 5px;
}

.media-body .title {
	margin-bottom: 5px;
}

.media-right {
	padding: 10px;
}

.share-icon {
	padding: 0 2px;
	font-size: 12px;
	color: rgb(14, 110, 184);
	border: 1px rgb(14, 110, 184) solid;
}

/* 动画相关 */
.slide-fade-enter-active {
  transition: all .3s ease;
}
.slide-fade-leave-active {
  transition: all .3s cubic-bezier(1.0, 0.5, 0.8, 1.0);
}
.slide-fade-enter, .slide-fade-leave-to {
  transform: translateY(-10px);
  opacity: 0;
}


/* 筛选弹窗 */
.filter-bg {
	position: fixed;
	top: 0;
	left: 0;
	z-index: 100;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, .7);
}

.hide-filter {
	position: absolute;
	top: 0;
	left: 0;
	z-index: 110;
	width: 100%;
	height: 100%;
}

.filter-dialog {
	position: absolute;
	width: 100%;
	height: 45%;
	bottom: 0;
	left: 0;
	z-index: 150;
	background: rgb(240, 241, 245);
}

.filter-dialog-title {
	border-bottom: 1px #999 solid;
	padding: 5px 10px;
	display: -webkit-flex;
	display: -moz-box;
	display: -o-box;
	display: -ms-flexbox;
	display: flex;
	justify-content: space-between;
}

.filter-dialog-title .left-btn {
	background: #fff;
	border: 1px rgb(14, 110, 184) solid;
	color: rgb(14, 110, 184);
	padding: 2px 8px;
	border-radius: 4px;
}

.filter-dialog-title .right-btn {
	background: rgb(14, 110, 184);
	color: #fff;
	padding: 2px 8px;
	border-radius: 4px;
}

.filter-dialog-content {
	height: calc(100% - 36px);
	height: -moz-calc(100% - 36px);
  height: -webkit-calc(100% - 36px);
}

.filter-dialog-content .left-list {
	width: 50%;
}

.filter-dialog-content .left-list li {
	line-height: 35px;
	padding: 0 10px;
}

.left-list-item {
	border-bottom: 1px #e0dede solid;
}

.right-list {
	width: 50%;
	height: 100%;
	overflow-y: auto;
	background: #fff;
}

.right-list li {
	line-height: 35px;
	padding: 0 10px;
}

.right-list li .clearfix {
	border-bottom: 1px #e0dede solid;
}

.right-list li img {
	position: relative;
	top: 5px;
	width: 20px;
}

.date-list {
	width: 80%;
}

.date-list-item {
	width: 14.2857%;
	float: left;
	text-align: center;
}

.date-list-item.bg-danger > div {
	color: #fff;
}

.calendar-btn {
	width: 20%;
}

